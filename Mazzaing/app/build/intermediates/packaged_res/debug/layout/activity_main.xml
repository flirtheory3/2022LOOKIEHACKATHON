<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    //상단

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#f49034"
        android:orientation="horizontal">

        //상단바
        <ImageView
            android:id="@+id/matTextHomeButton"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mattext"></ImageView>

        <ImageView
            android:layout_marginLeft="190dp"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:src="@drawable/bell"></ImageView>

        <ImageView
            android:layout_marginTop="33dp"
            android:layout_marginLeft="15dp"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/listup"></ImageView>

    </LinearLayout>

    //중단이미지

    <ImageView
        android:layout_width="330dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_backgroud_border_black"
        android:src="@drawable/mainfoodimage"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="220dp"
        android:text="물회는 어떠세요?"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"></TextView>

    //버튼들의 레이아웃

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="290dp"
        android:orientation="vertical">

        //버튼들

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/seoul_btn"
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/round_backgroud_border_black_button"
                android:gravity="center_vertical|left"
                android:text="서울"
                android:textSize="25dp"
                android:padding="15dp"></Button>

            <Button
                android:id="@+id/busan_btn"
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/round_backgroud_border_black_button"
                android:gravity="center_vertical|left"
                android:text="부산"
                android:textSize="25dp"
                android:padding="15dp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp">

            <Button
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/round_backgroud_border_black_button"
                android:gravity="center_vertical|left"
                android:text="경기"
                android:textSize="25dp"
                android:padding="15dp"></Button>

            <Button
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/round_backgroud_border_black_button"
                android:gravity="center_vertical|left"
                android:text="경상"
                android:textSize="25dp"
                android:padding="15dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp">

            <Button
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/round_backgroud_border_black_button"
                android:gravity="center_vertical|left"
                android:text="전라"
                android:textSize="25dp"
                android:padding="15dp"></Button>

            <Button
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/round_backgroud_border_black_button"
                android:gravity="center_vertical|left"
                android:text="충청"
                android:textSize="25dp"
                android:padding="15dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp">

            <Button
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/round_backgroud_border_black_button"
                android:gravity="center_vertical|left"
                android:text="제주"
                android:textSize="25dp"
                android:padding="15dp"></Button>

            <Button
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/round_backgroud_border_black_button"
                android:gravity="center_vertical|left"
                android:text="강원"
                android:textSize="25dp"
                android:padding="15dp"></Button>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"></RelativeLayout>


    </LinearLayout>

    //버튼의 이미지
    <ImageView
        android:layout_marginTop="300dp"
        android:layout_marginLeft="100dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/littleseoul"></ImageView>
    <ImageView
        android:layout_marginTop="310dp"
        android:layout_marginLeft="320dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/littlebusan"></ImageView>


</RelativeLayout>