<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Createpost">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#F49034"
        android:orientation="horizontal"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/mazzainglogo"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/mattext"
            android:layout_gravity="left|bottom"
            android:paddingTop="50dp">
        </ImageView>
        <ImageView
            android:id="@+id/alarm"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/bell">
        </ImageView>
        <ImageView
            android:id="@+id/lists"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/listup">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_gravity="top|center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/round_backgroud_border_black"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="강원"
                android:textStyle="bold"
                android:textColor="#F49034"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="만석 닭강정 위생"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="마쨍이 루키님"
                android:textStyle="bold"
                android:textColor="#F49034"
                android:gravity="center"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@drawable/round_backgroud_border_black"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_margin="10dp"
                android:gravity="left">
                <TextView
                    android:id="@+id/postDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2022.08.06 21:24"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"/>
                <ImageView
                    android:src="@drawable/iconsearch"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="215회"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"/>
                <ImageView
                    android:src="@drawable/chat"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="30"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:text="예전에 만석닭강정..">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_gravity="left"
                android:background="@drawable/round_backgroud_border_black"
                android:layout_width="240dp"
                android:layout_margin="10dp"
                android:layout_height="50dp"/>
            <Button
                android:layout_gravity="right"
                android:background="@drawable/round_backgroud_border_black"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:text="댓글"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_backgroud_border_black">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>